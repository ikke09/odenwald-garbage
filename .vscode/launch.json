{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "name": "Jest Service Tests",
      "request": "launch",
      "args": ["--runInBand"],
      "cwd": "${workspaceFolder}/service",
      "console": "externalTerminal",
      "internalConsoleOptions": "neverOpen",
      "disableOptimisticBPs": true,
      "program": "${workspaceFolder}/service/node_modules/jest/bin/jest.js",
      "outFiles": ["**/__tests__/**/*.[jt]s?(x)", "**/?(*.)+(spec|test).[jt]s?(x)"]
    },
    {
      "type": "node",
      "name": "Debug Service",
      "request": "launch",
      "args": ["--debug"],
      "cwd": "${workspaceFolder}/service",
      "console": "externalTerminal",
      "internalConsoleOptions": "neverOpen",
      "disableOptimisticBPs": true,
      "program": "${workspaceFolder}/service/bin/www"
    },
    {
      "name": "Debug Client",
      "type": "firefox",
      "request": "launch",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}/src",
      "pathMappings": [
        {
          "url": "http://localhost:3000",
          "path": "${webRoot}/*"
        }
      ]
    }
  ]
}
