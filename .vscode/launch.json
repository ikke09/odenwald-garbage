  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "name": "Jest Service Tests",
      "request": "launch",
      "args": ["--runInBand"],
      "cwd": "${workspaceFolder}/service",
      "console": "externalTerminal",
      "internalConsoleOptions": "neverOpen",
      "disableOptimisticBPs": true,
      "program": "${workspaceFolder}/service/node_modules/jest/bin/jest.js",
      "outFiles": ["**/__tests__/**/*.[jt]s?(x)", "**/?(*.)+(spec|test).[jt]s?(x)"]
    }
  ]
}
